div(layout="column" layout-gt-sm="row")
  md-list(flex)
    md-subheader.md-no-sticky.md-accent 공지사항
    md-list-item.md-2-line(ng-repeat="item in vm.notice" ng-click="vm.viewDetail('notice', item._id)")
      div.md-list-item-text
        h3 {{item.title}} 
        p.md-caption ({{item.commentCount}}) - {{item.created | amTimeAgo}}
      md-divider
    md-subheader.md-no-sticky.md-accent 자유게시판
    md-list-item.md-2-line(ng-repeat="item in vm.talk" ng-click="vm.viewDetail('talk', item._id)")
      div.md-list-item-text
        h3 {{item.title}} 
        p.md-caption ({{item.commentCount}}) - {{item.created | amTimeAgo}}
      md-divider
  md-list(flex)
    md-subheader.md-no-sticky.md-accent 댓글
    md-list-item.md-2-line(ng-repeat="item in vm.comment" ng-click="vm.viewDetail(item.board, item.write, item._id)")
      div.md-list-item-text
        h3 {{item.content}} 
        p.md-caption {{item.created | amTimeAgo}}
      md-divider